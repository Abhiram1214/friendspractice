<p id="notice"><%= notice %></p>

<h1>Listing Friendships</h1>

<table>
  <thead>
    <tr>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends_all.each do |friendship| %>
      <tr>
        <% if(friendship.from_id == current_user.id) %>
          <td><%= friendship.to_id %></td>
        <%else%>  
           <td><%= friendship.from_id %></td>
        <%end%>   
        
        <td><%= link_to 'Destroy', friendship, :method=> :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friendship', new_friendship_path %>
